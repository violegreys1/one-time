function normalizeUrl($sentence)// как найти определенную часть из предложения 
{
  if (strpos($sentence,'https://') === 0)
  { 
      return ($sentence);
  }
  else if (strpos($sentence,'http://') === 0)
  {
    return ('https://' . substr($sentence, 7));
  }
  else 
  {
     return ('https://' . $sentence); 
  }
}
// эта функция для работы с If, else , else if
